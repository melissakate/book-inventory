= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :publisher
    = f.text_field :publisher
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :purchased_on
    = f.date_select :purchased_on
  .field
    = f.label :purchased_at
    = f.text_field :purchased_at
  .field
    = f.label :borrowed
    = f.check_box :borrowed
  .actions
    = f.submit 'Save'
